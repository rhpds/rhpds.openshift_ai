apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: llama-32-3b-instruct-route
spec:
  hostnames:
    - inference-gateway.{{ _ocp4_workload_openshift_ai_model_deployment_ingress_domain }}
  parentRefs:
    - group: gateway.networking.k8s.io
      kind: Gateway
      name: openshift-ai-inference
      namespace: openshift-ingress
  rules:
    - backendRefs:
        - group: ''
          kind: Service
          name: llama-32-3b-instruct-predictor
          port: 80
          weight: 1
      matches:
        - headers:
            - name: X-Model
              value: llama-32-3b-instruct
